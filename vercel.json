{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "http://localhost:3001/$1",
      "headers": {
        "x-forwarded-host": ["localhost"]
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
